                        <xs:enumeration value="CC-BY"/>
                        <xs:enumeration value="CC-BY-NC"/>
                        <xs:enumeration value="CC-BY-NC-ND"/>
                        <xs:enumeration value="CC-BY-NC-SA"/>
                        <xs:enumeration value="CC-BY-ND"/>
                        <xs:enumeration value="CC-BY-SA"/>
                        <xs:enumeration value="CC-ZERO"/>
                        <xs:enumeration value="PDDL"/>
                        <xs:enumeration value="ODC-BY"/>
                        <xs:enumeration value="ODbL"/>
                        <xs:enumeration value="openForReuseWithRestrictions"/>
                        <xs:enumeration value="FreeOpenDataLicence_Belgium"/>
                        <xs:enumeration value="OpenDataLicenceAtAFairCost_Belgium"/>
                        <xs:enumeration value="FreeOpenDataLicenceForNon-CommercialRe-use_Belgium"/>
                        <xs:enumeration value="OpenDataLicenceAtAFairCostForCommercialRe-use_Belgium"/>
                        <xs:enumeration value="NLSOpenDataLicence_Finland"/>
                        <xs:enumeration value="LicenceOuverte-OpenLicence_France"/>
                        <xs:enumeration value="DL-DE-BY_Germany"/>
                        <xs:enumeration value="DL-DE-ZERO_Germany"/>
                        <xs:enumeration value="PSI-licence_Ireland"/>
                        <xs:enumeration value="IODL_Italy"/>
                        <xs:enumeration value="NLOD_Norway"/>
                        <xs:enumeration value="OGL_UK"/>
                        <xs:enumeration value="NCGL_UK"/>
                        <xs:enumeration value="non-standard/Other_Licence/Terms">
                            <xs:annotation>
                                <xs:appinfo>
                                    <xs:label>non-standard/other licence/terms</xs:label>
                                </xs:appinfo>
                            </xs:annotation>
                        </xs:enumeration>
                        <xs:enumeration value="underNegotiation"/>
                        <!--
                        <xs:enumeration value="IGCYL-NC_Spain"/>
                        <xs:enumeration value="ColorIURIS_Spain"/>
-->
                        <!---
                        <xs:enumeration value="MS-NoReD"/>
                        <xs:enumeration value="MS-NoReD-FF"/>
                        <xs:enumeration value="MS-NoReD-ND"/>
                        <xs:enumeration value="MS-NoReD-ND-FF"/>
                        <xs:enumeration value="MS-NC-NoReD"/>
                        <xs:enumeration value="MS-NC-NoReD-FF"/>
                        <xs:enumeration value="MS-NC-NoReD-ND"/>
                        <xs:enumeration value="MS-NC-NoReD-ND-FF"/>
                        <xs:enumeration value="AGPL"/>
                        <xs:enumeration value="ApacheLicence_2.0"/>
                        <xs:enumeration value="BSD"/>
                        <xs:enumeration value="BSD-style"/>
                        <xs:enumeration value="GFDL"/>
                        <xs:enumeration value="GPL"/>
                        <xs:enumeration value="LGPL"/>
                        <xs:enumeration value="Princeton_Wordnet"/>
-->
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="personalDataIncluded" type="xs:boolean">
                <xs:annotation>
                    <xs:documentation>Specifies whether the resource contains or not personal data; this might mean that
                        special handling of the resource is required (e.g. anonymisation)
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="personalDataAdditionalInfo" type="xs:string" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>If the resource includes personal data, this field can be used for entering more
                        information, e.g. whether special handling of the resource is required (e.g. anonymisation,
                        further request for use etc.)
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="sensitiveDataIncluded" type="xs:boolean">
                <xs:annotation>
                    <xs:documentation>Specifies whether the resource contains or not sensitive data; this might mean
                        that special handling of the resource is required (e.g. anonymisation)
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="sensitiveDataAdditionalInfo" type="xs:string" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>If the resource includes sensitive data, this field can be used for entering more
                        information, e.g. whether special handling of the resource is required (e.g. anonymisation)
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element name="restrictionsOfUse" minOccurs="0" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>Specifies terms and conditions of use (e.g. attribution, payment etc.) imposed by
                        the licence
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-many</relation>
                        <label>Conditions of Use</label>
                    </xs:appinfo>
                </xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:maxLength value="100"/>
                        <xs:enumeration value="nonCommercialUse"/>
                        <xs:enumeration value="commercialUse"/>
                        <xs:enumeration value="attribution"/>
                        <xs:enumeration value="shareAlike"/>
                        <xs:enumeration value="noDerivatives"/>
                        <xs:enumeration value="research"/>
                        <xs:enumeration value="education"/>
                        <xs:enumeration value="compensate"/>
                        <xs:enumeration value="other"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="otherLicenceName" type="xs:string" minOccurs="0"/>
            <xs:element name="otherLicence_TermsText" minOccurs="0" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>Used for inputting the text of licences that are not included in the pre-defined
                        list or terms of use statements associated with a resource
                    </xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:restriction base="ms:myString">
                            <xs:maxLength value="1000"/>
                        </xs:restriction>
                    </xs:simpleContent>
                </xs:complexType>
                <xs:unique name="uniqueLang13">
                    <xs:selector xpath="."/>
                    <xs:field xpath="@lang"/>
                </xs:unique>
            </xs:element>
            <xs:element name="otherLicence_TermsURL" type="ms:httpURI" minOccurs="0">
                <xs:annotation>
                    <xs:documentation>Used to provide a hyperlink to a url containing the text of a licence not included
                        in the predefined list or describing the terms of use for a language resource
                    </xs:documentation>
                </xs:annotation>
            </xs:element>
            <!--
            <xs:element name="distributionAccessMedium" minOccurs="0" maxOccurs="unbounded">
