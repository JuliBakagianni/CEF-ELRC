                    <xs:field xpath="@lang"/>
                </xs:unique>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:element name="distributionInfo">
        <xs:annotation>
            <xs:documentation>Groups information on the distribution of the resource</xs:documentation>
            <xs:appinfo>
                <relation>one-to-one</relation>
            </xs:appinfo>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="ms:distributionInfoType">
                    <xs:assert test="if (starts-with(ms:licenceInfo/ms:licence, 'CC') or ms:licenceInfo/ms:licence eq 'openForReuseWithRestrictions')
                        then ms:allowsUsesBesidesDGT = true()
                        else (ms:allowsUsesBesidesDGT)"
                               xerces:message="CC licences and openForReuseWithRestrictions should allow use besides DGT (allowsUsesBesidesDGT = true)"/>
                </xs:extension>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>
    <xs:element name="licenceInfo">
        <xs:annotation>
            <xs:documentation>Groups information on licences for the resource; can be repeated to allow for different
                modes of access and conditions of use (e.g. free for academic use, on-a-fee basis for commercial use,
                download of a sample for free use etc.)
            </xs:documentation>
            <xs:appinfo>
                <relation>one-to-one</relation>
            </xs:appinfo>
        </xs:annotation>
        <xs:complexType>
            <xs:complexContent>
                <xs:extension base="ms:licenceInfoType">
                    <!--ASSERTIONS FOR LICENCES WITH PREDEFINED SETS OF RESTRICTIONS OF USE-->
                    <xs:assert test="if (ms:licence = 'ODC-BY') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1 
					else true()"
                               xerces:message="The licence 'ODC-BY' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'PSI-licence') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1 
					else true()"
                               xerces:message="The licence 'PSI-licence' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'ODbL') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'shareAlike' and count(ms:restrictionsOfUse) = 2 
					else true()"
                               xerces:message="The licence 'ODbL' can only contain the following conditions (restrictionsOfUse = attribution, shareAlike)'"/>
                    <xs:assert test="if (ms:licence = 'CC-BY') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'CC-BY' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'CC-BY-NC') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'nonCommercialUse' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'CC-BY-NC' can only contain the following conditions (restrictionsOfUse = attribution, nonCommercialUse)'"/>
                    <xs:assert test="if (ms:licence = 'CC-BY-NC-ND') then
					ms:restrictionsOfUse = 'attribution' 
					and ms:restrictionsOfUse = 'nonCommercialUse' 
					and ms:restrictionsOfUse = 'noDerivatives' 
					and count(ms:restrictionsOfUse) = 3
					else true()"
                               xerces:message="The licence 'CC-BY-NC-ND' can only contain the following conditions (restrictionsOfUse = attribution, nonCommercialUse, noDerivatives)'"/>
                    <xs:assert test="if (ms:licence = 'CC-BY-NC-SA') then
					ms:restrictionsOfUse = 'attribution' 
					and ms:restrictionsOfUse = 'nonCommercialUse' 
					and ms:restrictionsOfUse = 'shareAlike' 
					and count(ms:restrictionsOfUse) = 3
					else true()"
                               xerces:message="The licence 'CC-BY-NC-SA' can only contain the following conditions (restrictionsOfUse = attribution, nonCommercialUse, shareAlike)'"/>
                    <xs:assert test="if (ms:licence = 'CC-BY-ND') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'noDerivatives' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'CC-BY-ND' can only contain the following conditions (restrictionsOfUse = attribution, noDerivatives)'"/>
                    <xs:assert test="if (ms:licence = 'CC-BY-SA') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'shareAlike' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'CC-BY-SA' can only contain the following conditions (restrictionsOfUse = attribution, shareAlike)'"/>
                    <xs:assert test="if (ms:licence = 'FreeOpenDataLicence_Belgium') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'FreeOpenDataLicence_Belgium' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'OpenDataLicenceAtAFairCost_Belgium') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'compensate' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'OpenDataLicenceAtAFairCost_Belgium' can only contain the following conditions (restrictionsOfUse = attribution, compensate)'"/>
                    <xs:assert test="if (ms:licence = 'FreeOpenDataLicenceForNon-CommercialRe-use_Belgium') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'nonCommercialUse' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'FreeOpenDataLicenceForNon-CommercialRe-use_Belgium' can only contain the following conditions (restrictionsOfUse = attribution, nonCommercialUse)'"/>
                    <xs:assert test="if (ms:licence = 'OpenDataLicenceAtAFairCostForCommercialRe-use_Belgium') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'compensate' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence OpenDataLicenceAtAFairCostForCommercialRe-use_Belgium'' can only contain the following conditions (restrictionsOfUse = attribution, compensate)'"/>
                    <xs:assert test="if (ms:licence = 'NLSOpenDataLicence_Finland') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'NLSOpenDataLicence_Finland' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'LicenceOuverte-OpenLicence_France') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'LicenceOuverte-OpenLicence_France' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'DL-DE-BY_Germany') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'DL-DE-BY_Germany' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'IODL_Italy') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'IODL_Italy' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'NLOD_Norway') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'NLOD_Norway' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'OGL_UK') then
					ms:restrictionsOfUse = 'attribution' and count(ms:restrictionsOfUse) = 1
					else true()"
                               xerces:message="The licence 'OGL_UK' can only contain an 'attribution' condition (restrictionsOfUse = attribution)'"/>
                    <xs:assert test="if (ms:licence = 'NCGL_UK') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'nonCommercialUse' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'NCGL_UK' can only contain the following conditions (restrictionsOfUse = attribution, nonCommercialUse)'"/>
                    <xs:assert test="if (ms:licence = 'IGCYL-NC_Spain') then
					ms:restrictionsOfUse = 'attribution' and ms:restrictionsOfUse = 'nonCommercialUse' and count(ms:restrictionsOfUse) = 2
					else true()"
                               xerces:message="The licence 'IGCYL-NC_Spain' can only contain the following conditions (restrictionsOfUse = attribution, nonCommercialUse)'"/>
                    <!--THE FOLLOWING LICENCES PERMIT NO CONDITIONS OF USE-->
                    <xs:assert test="if (ms:licence = 'PDDL') then count(ms:restrictionsOfUse) = 0
					else true()" xerces:message="The licence 'PDDL' should not include any conditions of use'"/>
                    <xs:assert test="if (ms:licence = 'CC-ZERO') then count(ms:restrictionsOfUse) = 0
					else true()" xerces:message="The licence 'CC-ZERO' should not include any conditions of use'"/>
                    <xs:assert test="if (ms:licence = 'DL-DE-ZERO_Germany') then count(ms:restrictionsOfUse) = 0
					else true()"
                               xerces:message="The licence ''DL-DE-ZERO_Germany' should not include any conditions of use'"/>
                </xs:extension>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>
</xs:schema>
