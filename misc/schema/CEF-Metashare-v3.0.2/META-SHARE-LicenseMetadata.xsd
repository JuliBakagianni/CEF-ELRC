<xs:schema xmlns:ms="http://www.ilsp.gr/META-XMLSchema" xmlns:xerces="http://xerces.apache.org"
           xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.ilsp.gr/META-XMLSchema"
           elementFormDefault="qualified" attributeFormDefault="unqualified" version="3.0.2" xml:lang="en">
    <xs:include schemaLocation="META-SHARE-SimpleTypes.xsd"/>
    <xs:include schemaLocation="META-SHARE-RoleTypes.xsd"/>
    <!-- definition of complex types -->
    <!-- media type info TextInfo/imageInfo/AudioInfo/VideInfo etc-->
    <xs:complexType name="distributionInfoType">
        <xs:annotation>
            <xs:documentation>Groups information on the distribution of the resource</xs:documentation>
            <xs:appinfo>
                <render-short>{availability}, licenses: {licenceInfo}</render-short>
            </xs:appinfo>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="availability">
                <xs:annotation>
                    <xs:documentation>Specifies the availability status of the resource; restrictionsOfUse can be
                        further used to indicate the specific terms of availability
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-one</relation>
                    </xs:appinfo>
                </xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:maxLength value="40"/>
                        <xs:enumeration value="available-unrestrictedUse">
                            <xs:annotation>
                                <xs:documentation>For resources available with no restrictions of use</xs:documentation>
                            </xs:annotation>
                        </xs:enumeration>
                        <xs:enumeration value="available-restrictedUse">
                            <xs:annotation>
                                <xs:documentation>For resources available but with restrictions of uses imposed by the
                                    type of licence
                                </xs:documentation>
                            </xs:annotation>
                        </xs:enumeration>
                        <xs:enumeration value="underNegotiation">
                            <xs:annotation>
                                <xs:documentation>for resources that their availability is still pending
                                </xs:documentation>
                            </xs:annotation>
                        </xs:enumeration>
                        <!--
                        <xs:enumeration value="availableThroughOtherDistributor">
                            <xs:annotation>
                                <xs:documentation>For resources that are not available through META-SHARE</xs:documentation>
                            </xs:annotation>
                        </xs:enumeration>
-->
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element ref="ms:licenceInfo" minOccurs="1" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>Groups information on licences for the resource; can be repeated to allow for
                        different modes of access and restrictions of use (e.g. free for academic use, on-a-fee basis
                        for commercial use, download of a sample for free use etc.)
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-many</relation>
                    </xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element name="allowsUsesBesidesDGT" type="xs:boolean">
                <xs:annotation>
                    <xs:documentation>Whether the resource can be used for purposes other than those of the DGT
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-one</relation>
                    </xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element name="iprHolder" type="ms:actorInfoType" minOccurs="0" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>Groups information on a person or an organization who holds the full Intellectual
                        Property Rights (Copyright, trademark etc) that subsist in the resource. The IPR holder could be
                        different from the creator that may have assigned the rights to the IPR holder (e.g. an author
                        as a creator assigns her rights to the publisher who is the IPR holder) and the distributor that
                        holds a specific licence (i.e. a permission) to distribute the work within the META-SHARE
                        network.
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>many-to-many</relation>
                    </xs:appinfo>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="membershipInfoType">
        <xs:annotation>
            <xs:documentation>The conditions imposed by the user being member of some association/institution (e.g.,
                ELRA, LDC) distributing the resource. This indicates the availability conditions (and prices) for users
                who are members or not.
            </xs:documentation>
            <xs:appinfo>
                <render-short>member:{member} {membershipInstitution}</render-short>
            </xs:appinfo>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="member" type="xs:boolean">
                <xs:annotation>
                    <xs:documentation>Whether the user is a member or not</xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-one</relation>
                    </xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element name="membershipInstitution" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>This lists the different institutions releasing the resources and establishing
                        membership conditions
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-many</relation>
                    </xs:appinfo>
                </xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:maxLength value="50"/>
                        <xs:enumeration value="ELRA"/>
                        <xs:enumeration value="LDC"/>
                        <xs:enumeration value="TST-CENTRALE"/>
                        <xs:enumeration value="other"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="licenceInfoType">
        <xs:annotation>
            <xs:documentation>Groups information on licences for the resource; can be repeated to allow for different
                modes of access and restrictions of use (e.g. free for academic use, on-a-fee basis for commercial use,
                download of a sample for free use etc.)
            </xs:documentation>
            <xs:appinfo>
                <render-short>{licence}</render-short>
            </xs:appinfo>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="licence">
                <xs:annotation>
                    <xs:documentation>The licence of use for the resource; for an overview of licences, please visit:
                    </xs:documentation>
                    <xs:appinfo>
                        <relation>one-to-many</relation>
                    </xs:appinfo>
                </xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:maxLength value="100"/>
