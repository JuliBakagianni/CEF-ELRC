	<xs:complexType name="repositoryInfoType">
		<xs:annotation>
			<xs:documentation>Groups together all information required for the description of repositories</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="headerInfo">
				<xs:annotation>
					<xs:documentation>Groups together all information pertaining to the header of a metadata record (repository or resource description)</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:sequence>
						<!--
						<xs:element name="metadataRecordURL" type="xs:anyURI">
							<xs:annotation>
								<xs:documentation>The url for the metadata record; automatically inserted by the repository s/w</xs:documentation>
							</xs:annotation>
						</xs:element>
-->
						<xs:element name="metadataCreationDate" type="xs:date">
							<xs:annotation>
								<xs:documentation>Creation date of the metadata record; automatically inserted by the repository s/w</xs:documentation>
							</xs:annotation>
						</xs:element>
						<xs:element name="metadataCreator" type="ms:personInfoType" minOccurs="0">
							<xs:annotation>
								<xs:documentation>Groups information on the person that has created the metadata record; automatically inserted by the repository s/w</xs:documentation>
								<xs:appinfo>
									<relation>many-to-many</relation>
								</xs:appinfo>
							</xs:annotation>
						</xs:element>
						<xs:element name="metadataLastDateUpdated" type="xs:date" minOccurs="0">
							<xs:annotation>
								<xs:documentation>The date of the last updating of the metadata record; automatically inserted by the repository s/w</xs:documentation>
							</xs:annotation>
						</xs:element>
						<xs:element name="revision" minOccurs="0">
							<xs:annotation>
								<xs:documentation>Provides an account of the revisions in free text or a link to a document with revisions</xs:documentation>
							</xs:annotation>
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:maxLength value="500"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="repositoryName" maxOccurs="unbounded">
				<xs:annotation>
					<xs:documentation>The official full name of the repository; the element can be repeated for different language versions (using the "lang" attribute to specify the language)</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:simpleContent>
						<xs:restriction base="ms:myString">
							<xs:maxLength value="500"/>
						</xs:restriction>
					</xs:simpleContent>
				</xs:complexType>
				<xs:unique name="uniqueLang14">
					<xs:selector xpath="."/>
					<xs:field xpath="@lang"/>
				</xs:unique>
			</xs:element>
			<xs:element name="repositoryAdditionalName" minOccurs="0" maxOccurs="unbounded">
				<xs:annotation>
					<xs:documentation>An additional name (usually a short name, acronym etc.) for the repository; the element can be repeated for different language versions (using the "lang" attribute to specify the language)</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:simpleContent>
						<xs:restriction base="ms:myString">
							<xs:attribute name="lang" type="xs:language"/>
						</xs:restriction>
					</xs:simpleContent>
				</xs:complexType>
				<xs:unique name="uniqueLang15">
					<xs:selector xpath="."/>
					<xs:field xpath="@lang"/>
				</xs:unique>
			</xs:element>
			<xs:element name="repositoryPID" type="xs:anyURI">
				<xs:annotation>
					<xs:documentation>A globally unique identifier in the form of a link that refers to the repository (for the MS platform, assigned by the Handle system)</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="repositoryURL" type="xs:anyURI">
				<xs:annotation>
					<xs:documentation>The URL that gives reference to the repository</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="repositoryType" default="institutional" maxOccurs="unbounded">
				<xs:annotation>
					<xs:documentation>The type of the repository, i.e. whether it's institutional, disciplinary or aggregating</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="xs:string">
						<xs:enumeration value="institutional">
							<xs:annotation>
								<xs:documentation>A repository whose contents belong to a single institution and/or is run by a single institution</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
						<xs:enumeration value="disciplinary">
							<xs:annotation>
								<xs:documentation>A repository that contains resources based on thematic criteria, i.e. related to primarily a single discipline</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
						<xs:enumeration value="aggregating">
							<xs:annotation>
								<xs:documentation>For aggregating repositories, i.e. repositories that host catalogues harvested from other repositories</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="providerType" default="dataProvider" maxOccurs="2">
				<xs:annotation>
					<xs:documentation>Documents the type of contents provided by the repository, i.e. data resources and/or web services</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="xs:string">
						<xs:enumeration value="dataProvider">
							<xs:annotation>
								<xs:documentation>For repositories that provide data resources</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
						<xs:enumeration value="serviceProvider">
							<xs:annotation>
								<xs:documentation>For repositories that provide web services</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="repositoryCountry" default="GRC">
				<xs:annotation>
					<xs:documentation>The country where the repository is hosted</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="xs:string">
						<xs:enumeration value="GRC">
							<xs:annotation>
								<xs:documentation>Greece</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
						<xs:enumeration value="CYP">
							<xs:annotation>
								<xs:documentation>Cyprus</xs:documentation>
							</xs:annotation>
						</xs:enumeration>
					</xs:restriction>
				</xs:simpleType>
			</xs:element>
			<xs:element name="repositoryLanguage" default="en" maxOccurs="unbounded">
				<xs:annotation>
					<xs:documentation>The primary language of the repository interface</xs:documentation>
				</xs:annotation>
				<xs:simpleType>
					<xs:restriction base="xs:language">
